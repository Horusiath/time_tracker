!!! 5
%html
  %head
    %title TimeTracker
    = stylesheet_link_tag "reset.css", "screen.css"
    = javascript_include_tag "jquery-1.4.3.min", "application"
    = csrf_meta_tag 
  %body
    %header
      %h1 TimeTracker
      %nav
        %ul
          %li= link_to "Home", new_user_registration_path
          - if current_user
            %li= link_to "Sign out", destroy_user_session_path
          - else
            %li= link_to "Sign up", new_user_registration_path
            %li= link_to "Sign in", new_user_session_path
      %p.notice= notice
      %p.alert= alert
    %section#content  
      = yield 
    %footer
      Copyright 2010 &copy; Wojciech Piekutowski, Hubert Łępicki
